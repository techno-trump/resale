---
import Checkbox from 'src/components/Checkbox.astro';
import Layout from '../layouts/Layout.astro';

---
<Layout title="ReSale Return" description="Order" flex={true}>
	<div class="auth">
		<div class="container auth__container">
			<div class="auth__header page-header">
				<nav aria-label="Breadcrumb" class="breadcrumbs tg-breadcrumbs page-header__breadcrumbs">
					<a href="/" class="breadcrumbs__item text-link">Главная</a>
					<span class="breadcrumbs__separator">›</span>
					<span class="breadcrumbs__item breadcrumb__item_active">Личный кабинет</span>
				</nav>
				<h1 class="tg-page-title page-header__title">Личный кабинет</h1>
			</div>
			<form class="auth__main section-space-bottom">
				<div class="form form_auth auth__form">
					<label class="form-field">
						<div class="form-field__label">Телефон</div>
						<input class="form-field__input" data-component=":tel-mask:"/>
					</label>
					<label class="form-field">
						<div class="form-field__label">Пароль</div>
						<div class="form-field__input-wrap">
							<input type="password" class="form-field__input"/>
							<button type="button" class="form-field__pass-toggle" data-component=":pass-mode-toggle:">
								<div class="form-field__pass-toggle-icon form-field__pass-toggle-icon_show icon-eye"></div>
								<div class="form-field__pass-toggle-icon form-field__pass-toggle-icon_hide icon-eye-off"></div>
							</button>
						</div>
					</label>
					<div class="form__group form__group_flex auth__tg-sm">
						<label class="checkbox-with-label">
							<Checkbox className="form-checkbox__input" name={"agreement"}></Checkbox>
							<div>Remember me</div>
						</label>
						<a href="" class="text-link text-link_primary">Забули пароль?</a>
					</div>
				</div>
				<button class="btn btn_sm btn_rect btn_round-corners btn_primary uppercase auth__btn">Увійти</button>
				<div class="auth__alt auth__tg-sm">
					Не маєте облікового запису? <a href="" class="text-link text-link_primary">Зареєструватися</a>
				</div>
			</form>
		</div>
	</div>
</Layout>